<!-- Include head file with scriptlet tag -->
<%- include('./partials/head.ejs') %>
<link rel="stylesheet" href="/css/signup.css"/>
<body>
  <div class="container">
    <% if(typeof message != "undefined" && message) { %>
      <div class="mt-3 message">
          <div class="alert alert-danger alert-dismissible" role="alert">
                 <div>	<%= message %></div>
                 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
      </div>
  <%}%>
    <form class="form" method="post" action="signin">
      <span class="title">Sign In</span>

      <div class="inputField">
        <i class="uil uil-user"></i>
        <input name="username" class="username" type="text" placeholder="Enter username" required>
      </div>

      <div class="inputField">
        <i class="bi bi-shield-lock"></i>
        <input name="password" class="password" type="password" placeholder="Enter password" required>
      </div>

      <div class="btn">
        <button type="submit" class="submitBtn">Submit</button>
      </div>

      <div class="text">Not a member?
        <a href="/signup" class="text signup-link">Sign Up Now</a>
    </div>
    </form>
  </div>

  <script src="/javascripts/index.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>

</html>